  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

  <%= render 'layouts/header' %>
    <div class="row">
      <div class="col-xs-12">
        <%flash.each do |key,value| %>
        <p>"alert alert-<%=key%>> <%=value%>"</p>
        <%end%>
      </div>

        <%= yield %>

</div>

</body>
</html>
